{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2019",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "declaration": true,
    "outDir": "./dist",
    "checkJs": true,
    "emitDeclarationOnly": true,
    "skipLibCheck": true,
    "types": ["vite/client", "node"]
  }
}
